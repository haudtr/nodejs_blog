<h1>Thùng rác</h1>
<a href="/me/stored/courses">Khóa học của tôi</a>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên khóa học</th>
      <th scope="col">Mô tả</th>
      <th scope="col">Ảnh</th>
      <th scope="col">Thời gian xóa</th>
      <th class="col"></th>
      <th class="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.image}}</td>
      <Td>{{this.deletedAt}}</Td>
      <td><a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
      <a href="" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-course-model">Xóa vĩnh viễn</a></td>
    </tr>
    {{else}}
        <tr>
          <td colspan="5" class="text-center">
          Thùng rác trống
          </td>
        </tr>
    {{/each}}

  </tbody>
</table>


{{! confirm }}
<div id="delete-course-model" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa khóa học</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn có chắc chắn muốn xóa khóa học này vĩnh viễn?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

{{! delete hidden form}}

<form name="delete-course-form" method="POST" action=""></form>
<form name="restore-course-form" method="POST" action=""></form>

<script>
  document.addEventListener('DOMContentLoaded',()=>{
    var courseID
    var restoreForm = document.forms['restore-course-form']
    var deleteForm = document.forms['delete-course-form']
    var btnDeleteCourse = document.getElementById('btn-delete-course')
    var restoreBtn = $('.btn-restore')

    $('#delete-course-model').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      var id = button.data('id');
      courseID =id;
    })

    btnDeleteCourse.onclick = function(){
      deleteForm.action = '/courses/' + courseID + '/force?_method=DELETE';
      deleteForm.submit();
    }
    restoreBtn.click(function(e){
        e.preventDefault();

        var courseID = $(this).data('id')
        restoreForm.action = '/courses/' + courseID + '/restores?_method=PATCH';
        restoreForm.submit();
    })
  })
</script>